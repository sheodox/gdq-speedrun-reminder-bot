{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"isolatedModules": true,
		"outDir": "dist"
	},
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.svelte"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
