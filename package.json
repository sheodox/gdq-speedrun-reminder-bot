{
  "name": "gdq-reminder-bot",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "pm2 start dist/app.js",
    "stop": "pm2 stop dist/app.js",
    "deploy": "npm stop && git pull && npm run build && npm start",
    "build": "npm run build-server:prod && npm run build-static:prod",
    "dev:server": "nodemon ./dist/server/app.js --watch dist/server/",
    "build-server:dev": "tsc --watch",
    "build-server:prod": "tsc",
    "build-static:dev": "vite",
    "build-static:prod": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
    "@tsconfig/svelte": "^2.0.1",
    "nodemon": "^2.0.16",
    "pm2": "^5.2.0",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.7",
    "svelte-preprocess": "^4.9.8",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "vite": "^2.9.9"
  },
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "cheerio": "^1.0.0-rc.11",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "fastify": "^4.0.3",
    "node-fetch": "^3.2.6",
    "sass": "^1.52.3",
    "sheodox-ui": "^0.17.2"
  }
}
